                <animations:Implicit.HideAnimations>
                    <animations:ScalarAnimation Target="Translation.Y" Duration="00:00:00.1500000" To="50"/>
                    <animations:OpacityAnimation Duration="00:00:00.1500000" To="0"/>
                </animations:Implicit.HideAnimations>
                
                <Button Command="{Binding ClearSelectedTracksCommand}"
                        extensions:Mouse.Cursor="Hand"
                        Style="{StaticResource TextBlockButtonStyle}"
                        ToolTipService.ToolTip="Clear Selected Tracks"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE1EF;" FontSize="16" Foreground="{ThemeResource PrimaryForeground}" Margin="0,0,8,0"/>
                       <TextBlock Text="{Binding SelectedTracks.Count, FallbackValue=0}" 
                                  FontSize="14" 
                                  Foreground="{ThemeResource PrimaryForeground}"
                                  Margin="0 0 0 1"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <StackPanel Grid.Column="1"
                            Height="32"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right">
                    <Button Background="#161616"
                            Command="{Binding PlaySelectedTracksCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource PrimaryForeground}"
                            Padding="16 0"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsTracksViewBusy, Converter={StaticResource BoolNegationConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE768;" FontSize="14"/>
                            <TextBlock Text="Play" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button Background="#161616"
                            Command="{Binding RemoveSelectedTracksCommand}"
                            CornerRadius="10"
                            extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource PrimaryForeground}"
                            Margin="8 0 0 0"
                            Padding="16 0"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsTracksViewBusy, Converter={StaticResource BoolNegationConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xE10A;" FontSize="14"/>
                            <TextBlock Text="Remove" FontSize="12" Margin="8 0 0 0"/>
                        </StackPanel>
                    </Button>
                    <Button extensions:Mouse.Cursor="Hand"
                            Foreground="{ThemeResource PrimaryForeground}"
                            Margin="8 0 0 0"
                            Padding="16 0"
                            VerticalAlignment="Stretch"
                            IsEnabled="{Binding IsTracksViewBusy, Converter={StaticResource BoolNegationConverter}}"
                            Style="{StaticResource TextBlockButtonStyle}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Create new playlist" Command="{Binding ShowCreatePlaylistTracksDialogCommand}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xED11;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Text="Add to other playlist" Command="{Binding AddSelectedTracksToPlaylistCommand}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE8D6;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.Flyout>
                        <FontIcon Glyph="&#xE712;" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.RowSpan="10" 
                  Margin="-16, -36, -16, -16"
                  Visibility="{Binding IsTracksViewBusy, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=collapsed}">
                <Grid.Background>
                    <media:AcrylicBrush
                          BackgroundSource="Backdrop"
                          TintColor="#010101"
                          TintOpacity="0.55"
                          BlurAmount="3"/>
                </Grid.Background>
                <muxc:ProgressRing IsActive="{Binding IsTracksViewBusy}" 
                              Height="48" Width="48"
                              Foreground="{ThemeResource PrimaryForeground}"/>
            </Grid>
        </Grid>
        <Grid Height="32" 
              VerticalAlignment="Top" 
              Grid.RowSpan="100"
              Grid.ColumnSpan="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="DragGrid" Background="Transparent" Grid.Column="1">
                <!--<TextBlock Text="Spotify companion" Margin="8,8,0,0" />-->

            </Grid>
        </Grid>
        <Grid x:Name="LoginView"
              Grid.ColumnSpan="100"
              Grid.RowSpan="100"
              Visibility="{Binding ShowLogin, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.Background>
                <media:AcrylicBrush
                      BackgroundSource="Backdrop"
                      TintColor="#010101"
                      TintOpacity="0.85"
                      BlurAmount="12"/>
            </Grid.Background>
            <StackPanel MaxWidth="300" VerticalAlignment="Center">
                <Image Source="/Assets/with_shadow.png" Stretch="Uniform" Margin="0 0 0 24" Width="200"/>
                <TextBlock Text="Connect the app with your Spotify account to continue." 
                           FontSize="24" 
                           FontFamily="Segoe UI"
                           TextAlignment="Center"
                           HorizontalAlignment="Left"
                           TextWrapping="WrapWholeWords"/>
                <Button RequestedTheme="Dark" 
                        extensions:Mouse.Cursor="Hand"
                        Background="White"
                        Margin="0 24 0 12" 
                        FontSize="18"
                        Foreground="#010101"
                        HorizontalAlignment="Center"
                        Command="{Binding ConnectSpotifyCommand}"
                        Padding="8 0 24 0" 
                        CornerRadius="16" 
                        Height="40"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BoolNegationConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="24" 
                               VerticalAlignment="Center"
                               Margin="0 0 12 0"
                               Source="/Assets/Spotify_Icon_RGB_Green.png"/>
                        <TextBlock Text="Connect app to Spotify"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Margin="0 0 0 2"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="RefreshButton"
                        extensions:Mouse.Cursor="Hand"
                        Command="{Binding RefreshCommand}"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource PrimaryForeground}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource TextBlockButtonStyle}">
                        <TextBlock Text="OR REFRESH APP" FontSize="12" TextDecorations="Underline"/>
                    </Button>
            </StackPanel>


            <ProgressBar Grid.ColumnSpan="100"
                     IsIndeterminate="{Binding IsLoading}"
                     Foreground="White" 
                         Margin="36"
                     VerticalAlignment="Top"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

        </Grid>
        <Grid x:Name="DialogBackdrop"
              Grid.ColumnSpan="100"
              Grid.RowSpan="100"
              Visibility="{Binding IsDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.Background>
                <media:AcrylicBrush BackgroundSource="Backdrop"
                                    TintColor="#000000"
                                    TintOpacity="0.70"
                                    BlurAmount="5" 
                                    FallbackColor="#000000"/>
            </Grid.Background>
        </Grid>
        <UserControl x:Name="MessageBox"
                     Height="64"
                     Grid.Column="1" VerticalAlignment="Bottom"
                     DataContext="{Binding Notification}">
            <Interactivity:Interaction.Behaviors>
                <ToolkitBehaviors:Offset x:Name="NotificationShow" Duration="400" Delay="0" AutomaticallyStart="True" OffsetY="0" OffsetX="0" EasingMode="EaseOut" EasingType="Cubic" />
                <ToolkitBehaviors:Offset x:Name="NotificationHide" Duration="400" Delay="0" AutomaticallyStart="True" OffsetY="64" OffsetX="0" EasingMode="EaseOut" EasingType="Cubic" />
            </Interactivity:Interaction.Behaviors>
            <Grid Padding="16 0">
                <Grid x:Name="SuccessMessage"
                      Background="White"
                      CornerRadius="10"
                      Height="36"
                      Padding="24 0"
                      Visibility="{Binding IsSuccess, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=collapsed}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon Glyph="&#xE946;" 
                              FontSize="16" 
                              Foreground="Black" 
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#010101"
                               Text="{Binding Text, FallbackValue=This is a test of a notification}"
                               Margin="0 0 0 3"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"/>
                </Grid>
                <Grid x:Name="ErrorMessage"
                      Background="{ThemeResource DangerThemeBrush}"
                      CornerRadius="10"
                      Height="36"
                      Padding="24 0"
                      Visibility="{Binding IsError, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon Glyph="&#xE7BA;" 
                              FontSize="16" 
                              Foreground="{ThemeResource PrimaryForeground}" 
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource PrimaryForeground}"
                               Text="{Binding Text, FallbackValue=This is a test of a notification}"
                               Margin="0 0 0 1"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"/>
                </Grid>
                <ToggleButton Style="{StaticResource TextBlockButtonStyle}"
                              extensions:Mouse.Cursor="Hand"
                              IsChecked="{Binding DataContext.IsNotificationOpen, ElementName=page, Mode=TwoWay}"
                              Foreground="#010101"
                              Width="40"
                              Padding="0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Stretch">
                    <FontIcon Glyph="&#xE106;" FontSize="12"/>
                </ToggleButton>
            </Grid>
        </UserControl>   
        <Grid Visibility="Collapsed">
            <CheckBox x:Name="checkBox" Visibility="Collapsed" IsChecked="{Binding IsNotificationOpen}">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Checked">
                            <Core:CallMethodAction TargetObject="{Binding ElementName=NotificationShow}" MethodName="StartAnimation"/>
                        </Core:EventTriggerBehavior>
                        <Core:EventTriggerBehavior EventName="Unchecked">
                            <Core:CallMethodAction TargetObject="{Binding ElementName=NotificationHide}" MethodName="StartAnimation"/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </CheckBox>
        </Grid>
    </Grid>
</Page>
